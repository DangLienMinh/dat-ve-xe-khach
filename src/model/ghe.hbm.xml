<?xml version='1.0'?>
<!DOCTYPE hibernate-mapping PUBLIC
'-//Hibernate/Hibernate Mapping DTD 3.0//EN'
'http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd'>

<hibernate-mapping>
   <class name="model.Ghe" table="Ghe">
      <id name="MaGhe" column="MaGhe">
       <generator class="increment"/>
      </id>
       <property name="TenGhe" column="TenGhe"/>
       <many-to-one name="MaLoaiXe" column="MaLoaiXe"  cascade="all"
       class="model.LoaiXe" not-null="true"/> 
      <set name="DatVe" table="ChiTietHoaDon" inverse="false" lazy="true" fetch="select" cascade="all">
         <key column="MaGhe" not-null="true"/>
         <many-to-many column="MaHD"  entity-name="model.HoaDon"/>
      </set>
     
   </class>
   <class name="model.LoaiXe" table="LoaiXe">
      <id name="MaLoaiXe" column="MaLoaiXe">
      <generator class="increment"/>
      </id>
      <property name="TenLoaiXe" column="TenLoaiXe"/>
       <property name="GiuongNam" column="GiuongNam"/>
   </class>
</hibernate-mapping>