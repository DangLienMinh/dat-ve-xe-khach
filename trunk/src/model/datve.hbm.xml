<?xml version='1.0'?>
<!DOCTYPE hibernate-mapping PUBLIC
'-//Hibernate/Hibernate Mapping DTD 3.0//EN'
'http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd'>

<hibernate-mapping>
   <class name="model.DatVe" table="DatVe">
      <id name="MaDV" type="String" column="MaDV">
      </id>
      <property name="NgayGD" column="NgayGD" type="Date"/>
      <property name="TongTien" column="TongTien" type="int"/>
      <property name="NgayDi" column="NgayDi" type="Date"/>
      <property name="HoTen" column="HoTen" type="String"/>
      <property name="DiaChi" column="DiaChi" type="String"/>
      <property name="Email" column="Email" type="String"/>
      <property name="DienThoai" column="DienThoai" type="String"/>
      <property name="HinhThucThanhToan" column="HinhThucThanhToan" type="int"/>
      <set name="Ghe"   table="ChiTietDV" inverse="true" lazy="true" fetch="select">
         <key column="MaDV" not-null="true"/>
         <many-to-many column="MaGhe" class="model.Ghe"/>
      </set>
      
      <many-to-one name="MaChuyen" column="MaChuyen" 
       class="model.Chuyen" not-null="true"/>
   </class>
</hibernate-mapping>